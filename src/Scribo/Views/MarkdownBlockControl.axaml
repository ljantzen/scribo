<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="using:Scribo.Models"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="50"
        x:Class="Scribo.Views.MarkdownBlockControl"
        x:DataType="models:MarkdownBlock">
    
    <Border Margin="0,4"
           Padding="{Binding Padding}"
           Background="{Binding Background}">
        <TextBlock x:Name="contentTextBlock"
                  TextWrapping="Wrap"
                  FontSize="{Binding FontSize}"
                  FontWeight="{Binding FontWeight}"
                  FontFamily="{Binding FontFamily}"
                  Foreground="Black"
                  Cursor="Hand"
                  PointerPressed="OnTextBlockPointerPressed">
        </TextBlock>
    </Border>
</UserControl>
